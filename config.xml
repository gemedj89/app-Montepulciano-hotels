<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mhotels" version="2.1.3" xmlns="http://www.w3.org/ns/widgets">
    <name> Montepulciano Hotels
</name>
    <description> Montepulciano Hotels </description>
	<icon src="icon.png" />
    <author href="http://montepulcianohotels.it" email="info@montepulcianohotels.it"> Montepulciano Hotels</author>
    <access origin="http://*/*" />
    <access origin="https://*/*" />
    <access origin="tel:*" launch-external="yes" />
    <access origin="market:*" launch-external="yes" />
    <content src="index.html" />
    <preference name="loglevel" value="DEBUG" />
	<preference name="Fullscreen" value="true" />
	<preference name="SplashScreen" value="screen"/>
	 <splash src="splash.png" density="land-hdpi"/>
    <splash src="splash.png" density="land-ldpi"/>
    <splash src="splash.png" density="land-mdpi"/>
    <splash src="splash.png" density="land-xhdpi"/>
    <splash src="splash.png" density="port-hdpi"/>
    <splash src="splash.png" density="port-ldpi"/>
    <splash src="splash.png" density="port-mdpi"/>
    <splash src="splash.png" density="port-xhdpi"/>
	
	
	<platform name="ios">
              <!-- iOS 8.0+ -->
              <!-- iPhone 6 Plus  -->
              <icon src="icon.png" width="180" height="180" />
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="icon.png" width="60" height="60" />
              <icon src="icon.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="icon.png" width="76" height="76" />
              <icon src="icon.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="icon.png" width="40" height="40" />
              <icon src="icon.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="res/ios/icon.png" width="57" height="57" />
              <icon src="icon.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="icon.png" width="72" height="72" />
              <icon src="icon.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="icon.png" width="29" height="29" />
              <icon src="icon.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="icon.png" width="50" height="50" />
              <icon src="icon.png" width="100" height="100" />
     </platform>
	
	
	
	
	
	
</widget>
